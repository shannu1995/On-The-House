<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/card_margin"
    android:elevation="3dp"
    card_view:cardCornerRadius="@dimen/card_offers_radius">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_border"
        android:paddingBottom="4dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_below="@id/title"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/offer_image_border"
            android:clickable="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Show Title"
            android:textAllCaps="false"
            android:textColor="@color/primary_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toStartOf="@+id/rb_offer_list"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/thumbnail" />

        <LinearLayout
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:background="@color/colorAccent"
            android:orientation="horizontal"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/title" />


        <ImageView
            android:id="@+id/offers_info"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:background="@drawable/icon_more_info"
            android:clickable="true"
            android:scaleType="fitXY"
            card_view:layout_constraintBottom_toBottomOf="@+id/offers_upgrade"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/offers_upgrade" />

        <TextView
            android:id="@+id/offers_info_text"
            android:layout_width="75dp"
            android:layout_height="16dp"
            android:text="@string/offers_info"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/offers_upgrade_text"
            card_view:layout_constraintEnd_toEndOf="@+id/offers_info"
            card_view:layout_constraintStart_toStartOf="@+id/offers_info" />


        <ImageView
            android:id="@+id/offers_upgrade"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:scaleType="fitXY"
            card_view:layout_constraintEnd_toStartOf="@+id/offers_share"
            card_view:layout_constraintHorizontal_bias="0.502"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/offers_info"
            card_view:layout_constraintTop_toBottomOf="@+id/view"
            card_view:srcCompat="@drawable/icon_upgrade_to_gold" />

        <TextView
            android:id="@+id/offers_upgrade_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/offers_upgrade"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="@+id/offers_upgrade"
            card_view:layout_constraintStart_toStartOf="@+id/offers_upgrade"
            card_view:layout_constraintTop_toBottomOf="@+id/offers_upgrade" />


        <ImageView
            android:id="@+id/offers_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/icon_share"
            android:clickable="true"
            android:scaleType="fitXY"
            card_view:layout_constraintBottom_toBottomOf="@+id/offers_upgrade"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/offers_upgrade" />

        <TextView
            android:id="@+id/offers_share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offers_share"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/offers_upgrade_text"
            card_view:layout_constraintEnd_toEndOf="@+id/offers_share"
            card_view:layout_constraintStart_toStartOf="@+id/offers_share" />

        <RatingBar
            android:id="@+id/rb_offer_list"
            style="@android:style/Widget.DeviceDefault.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:numStars="5"
            android:stepSize="1"
            card_view:layout_constraintBottom_toBottomOf="@+id/title"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/title" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>