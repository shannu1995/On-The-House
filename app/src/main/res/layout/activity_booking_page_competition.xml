<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/competeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onthehouse.onthehouse.BookingPageCompetition"
    android:background="@color/backgroundColorFirstHalf">

    <TextView
        android:id="@+id/competition_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Price Placeholder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/answer"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/competition_question" />

    <cn.xm.weidongjian.progressbuttonlib.ProgressButton
        android:id="@+id/confirm_delivery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:background="@drawable/selector_button"
        android:text="@string/confirm_1"
        android:textColor="@color/backgroundColorFirstHalf"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/answer" />

    <cn.xm.weidongjian.progressbuttonlib.ProgressButton
        android:id="@+id/progressButton2"
        android:layout_width="109dp"
        android:layout_height="49dp"
        android:background="@drawable/selector_button"
        android:text="@string/cancel"
        android:textColor="@color/backgroundColorFirstHalf"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toRightOf="@+id/confirm_delivery"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/answer" />


</android.support.constraint.ConstraintLayout>