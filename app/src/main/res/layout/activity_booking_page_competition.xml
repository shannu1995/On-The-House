<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/competeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onthehouse.onthehouse.BookingPageCompetition"
    android:background="@color/backgroundColorFirstHalf"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/competition_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price Placeholder"
        android:textColor="@color/white"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/answer"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        tools:layout_editor_absoluteY="33dp"
        tools:layout_editor_absoluteX="8dp" />

    <cn.xm.weidongjian.progressbuttonlib.ProgressButton
        android:id="@+id/confirm_delivery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_button"
        android:text="@string/confirm_1"
        android:textColor="@color/backgroundColorFirstHalf"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/answer"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <cn.xm.weidongjian.progressbuttonlib.ProgressButton
        android:id="@+id/progressButton2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/selector_button"
        android:text="@string/cancel"
        android:textColor="@color/backgroundColorFirstHalf"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


</android.support.constraint.ConstraintLayout>