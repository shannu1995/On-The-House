<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:material="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorFirstHalf"
    tools:context="com.onthehouse.onthehouse.PaymentPortal">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/deliveryLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="81dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/first_heard_show"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/email" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/white"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginStart="8dp"
            app:layout_constraintRight_toRightOf="parent"></Spinner>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:hint="@string/answer"
            android:inputType="textPersonName"
            android:visibility="gone"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            android:layout_marginStart="16dp"
            app:met_textColor="@color/white"
            app:met_textColorHint="@color/white"
            app:met_primaryColor="@color/colorAccent"
            />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/facebook_friends"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" />

        <cn.xm.weidongjian.progressbuttonlib.ProgressButton
            android:id="@+id/progressButton2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button"
            android:text="@string/cancel"
            android:textColor="@color/backgroundColorFirstHalf"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline4"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox" />

        <cn.xm.weidongjian.progressbuttonlib.ProgressButton
            android:id="@+id/confirm_delivery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/selector_button"
            android:text="@string/confirm_1"
            android:textColor="@color/backgroundColorFirstHalf"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline4"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="388dp"
            android:layout_height="62dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/delivery_instructions"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@android:color/white"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/sending"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-217dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-174dp"
            android:text="@string/retrieve"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/last_name"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/last_name"
            android:inputType="textPersonName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"

            app:met_floatingLabel="normal"
            app:met_textColor="@color/white"
            app:met_textColorHint="@color/white"
            app:met_primaryColor="@color/colorAccent"
            app:met_floatingLabelTextColor="@color/red"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/postcode"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/postcode"
            android:inputType="textPersonName"
            app:layout_constraintRight_toRightOf="parent"
            android:textColorHint="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/city"

            app:met_floatingLabel="normal"
            app:met_textColor="@color/white"
            app:met_textColorHint="@color/white"
            app:met_primaryColor="@color/colorAccent"
            app:met_floatingLabelTextColor="@color/red"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/city"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:hint="@string/city"
            android:inputType="textPersonName"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/last_name"

            app:met_floatingLabel="normal"
            app:met_textColor="@color/white"
            app:met_textColorHint="@color/white"
            app:met_primaryColor="@color/colorAccent"
            app:met_floatingLabelTextColor="@color/red"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/state"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/state"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/street"

            app:met_floatingLabel="normal"
            app:met_textColor="@color/white"
            app:met_textColorHint="@color/white"
            app:met_primaryColor="@color/colorAccent"
            app:met_floatingLabelTextColor="@color/red"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/street"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/street"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColorHint="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/first_name"

            app:met_floatingLabel="normal"
            app:met_textColor="@color/white"
            app:met_textColorHint="@color/white"
            app:met_primaryColor="@color/colorAccent"
            app:met_floatingLabelTextColor="@color/red"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/first_name"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/first_name"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"

            app:met_floatingLabel="normal"
            app:met_textColor="@color/white"
            app:met_textColorHint="@color/white"
            app:met_primaryColor="@color/colorAccent"
            app:met_floatingLabelTextColor="@color/red"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/email"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/state"

            app:met_floatingLabel="normal"
            app:met_textColor="@color/white"
            app:met_textColorHint="@color/white"
            app:met_primaryColor="@color/colorAccent"
            app:met_floatingLabelTextColor="@color/red"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/phone"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/phone_number"
            android:inputType="number"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/postcode"

            app:met_floatingLabel="normal"
            app:met_textColor="@color/white"
            app:met_textColorHint="@color/white"
            app:met_primaryColor="@color/colorAccent"
            app:met_floatingLabelTextColor="@color/red"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/payment_portal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirm_delivery" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/competition_page"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline4"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>